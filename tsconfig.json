{
  "compileOnSave": false,
  "compilerOptions": {
    "importHelpers": true,
    "module": "ESNext",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    
    "types": ["@playwright/test"],
    "target": "ESNext",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "strict": true,
    "plugins": [
      { "name": "tslint-language-service" }
    ]
  },
  "include": ["src/**/*.ts"]
}
